---
interface Prop {
  name: string
  type: string
  default?: string
  description: string
}

interface Props {
  props: Prop[]
}

const { props } = Astro.props
---

<div class="not-content">
  <table class="props-table">
    <thead>
      <tr>
        <th>Prop</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {props.map((prop: Prop) => (
        <tr>
          <td><code>{prop.name}</code></td>
          <td><code>{prop.type}</code></td>
          <td>{prop.default ? <code>{prop.default}</code> : 'â€”'}</td>
          <td>{prop.description}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
